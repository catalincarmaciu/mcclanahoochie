<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent" android:layout_width="fill_parent">

<LinearLayout 

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:isScrollContainer="true" android:scrollbars="vertical">

    <TextView 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/title_settings" 
    	android:lines="2" 
    	android:text="--- Settings ----" />
    
    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/thresholding_1" android:text="Use Thresholds"></CheckBox><TextView 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/title_1" android:text="X Acceleration Threshold "/>
    
    <SeekBar android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="0" 
        android:id="@+id/seek_1" />

    <TextView
     	android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/progress_1" />

    <TextView 
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tracking_1" />
        
	<TextView 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:id="@+id/title_2" android:text="Y Acceleration Threshold"/>
	
	<SeekBar 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:max="100"
		android:progress="50"
		android:secondaryProgress="0" 
		android:id="@+id/seek_2" />
			
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/progress_2" />
	
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/tracking_2" />
		
	<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/title_3" android:text="Z Acceleration Threshold"/>
	   
	<SeekBar 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:max="100"
		android:progress="50"
		android:secondaryProgress="0" 
		android:id="@+id/seek_3" />
	
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/progress_3" />
	
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/tracking_3" />



</LinearLayout>

</ScrollView>








